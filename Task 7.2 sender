#include <avr/io.h>
#include <util/delay.h>

void uart_init(void) {
    uint16_t ubrr = 103;  // 9600 baud for 16 MHz (datasheet)
    UBRR0H = (uint8_t)(ubrr >> 8);  // Set high byte of UBRR
    UBRR0L = (uint8_t)ubrr;  // Set low byte of UBRR

    UCSR0C = (1 << UCSZ01) | (1 << UCSZ00);  // 8 data bits
    UCSR0B = (1 << TXEN0) | (1 << RXEN0);  // Enable transmitter and receiver
}

uint8_t uart_receive(void) {
    while (!(UCSR0A & (1 << RXC0)));  // Wait for data
    return UDR0;  // Return received byte
}

void uart_transmit(uint8_t data) {
    while (!(UCSR0A & (1 << UDRE0)));  // Wait for buffer to be empty
    UDR0 = data;  // Transmit data
}

int main(void) {
    uart_init();  // Initialize UART
    
    uint8_t c;
    uint8_t send_val;
    
    while (1) {
        c = uart_receive();  // Wait for input
        
        if (c == '1') {  // If '1' was sent
            send_val = 1;
            uart_transmit(send_val);  // Send 1
        }
        else if (c == '2') {  // If '2' was sent
            send_val = 2;
            uart_transmit(send_val);  // Send 2
        }
        else if (c == '3') {  // If '3' was sent
            send_val = 3;
            uart_transmit(send_val);  // Send 3
        }
        else if (c == '4') {  // If '4' was sent
            send_val = 4;
            uart_transmit(send_val);  // Send 4
        }
        else if (c == '0') {  // If '0' was sent
            send_val = 0;
            uart_transmit(send_val);  // Send 0
        }
    }
}
